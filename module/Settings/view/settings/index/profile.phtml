<script>
    // Tabs (unchanged)
    $(".tab-link").click(function () {
        $(".tab-link").removeClass("active");
        $(this).addClass("active");
        $(".tab-content").removeClass("active");
        $("#tab-" + $(this).data("tab")).addClass("active");
    });

    $(document).ready(function () {
        // Country preset
        $('#isoCountry').select2('val',"<?php echo $this->Info['isoCountry'];?>");

        // Save preferences (unchanged logic)
        $("#frmPref").submit(function (e) {
            e.preventDefault();
            var $form = $('#frmPref');
            var objMasterData = $form.serializeObject();
            $.extend(objMasterData, { MASTER_KEY_ID: 0});
            objMasterData = JSON.stringify(objMasterData);
            var objFormData = { pAction: strActionMode, FORM_DATA: objMasterData };
            var objMyPost = AJAX_Post("<?php echo $this->url('settings', array('action'=>'saveProfile'));?>", objFormData);
            if (objMyPost.ERR_NO === 0) {
                if (objMyPost.DATA.DBStatus === 'OK') {
                    $("#toastMessage").text("Preferences saved successfully!").fadeIn(200).delay(3000).fadeOut(400);
                }
            } else {
                mySmallAlert('Error...!', 'There was an error', 0);
            }
        });

        // ===== Avatar Upload =====
        const avatarInput = document.getElementById('avatarInput');
        const avatarEditBtn = document.getElementById('avatarEditBtn');
        const profileAvatar = document.getElementById('profileAvatar');
        const avatarWrap = document.getElementById('avatarWrap');

        if (avatarEditBtn && avatarInput) {
            avatarEditBtn.addEventListener('click', () => avatarInput.click());

            avatarInput.addEventListener('change', function(){
                if(!this.files || !this.files[0]) return;

                const file = this.files[0];
                const allowed = ['image/jpeg','image/png','image/webp','image/gif'];
                if(!allowed.includes(file.type)){ toast("Please select a JPG/PNG/WEBP image."); this.value=""; return; }
                if(file.size > 3 * 1024 * 1024){ toast("Max file size is 3 MB."); this.value=""; return; }

                // instant preview
                const reader = new FileReader();
                reader.onload = function(e){
                    const imgTag = profileAvatar.querySelector('img');
                    if(imgTag){ imgTag.src = e.target.result; }
                    else{
                        profileAvatar.innerHTML = '<img alt="Avatar">';
                        profileAvatar.querySelector('img').src = e.target.result;
                    }
                };
                reader.readAsDataURL(file);

                // upload to backend
                uploadAvatar(file);
            });
        }

        function uploadAvatar(file){
            const fd = new FormData();
            fd.append('avatar', file);

            avatarWrap.classList.add('avatar-uploading');

            $.ajax({
                url: "<?php echo $this->url('settings', array('action'=>'uploadAvatar'));?>",
                type: "POST",
                data: fd,
                processData: false,
                contentType: false,
                success: function(resp){
                    avatarWrap.classList.remove('avatar-uploading');
                    try{
                        var data = typeof resp === "string" ? JSON.parse(resp) : resp;
                        if(data && data.status === "OK" && data.url){
                            const img = profileAvatar.querySelector('img');
                            if(img){ img.src = data.url; }
                            toast("Profile photo updated");
                        }else{
                            toast("Upload failed. Please try again.");
                        }
                    }catch(e){
                        toast("Upload failed. Please try again.");
                    }
                },
                error: function(){
                    avatarWrap.classList.remove('avatar-uploading');
                    toast("Upload error. Please try again.");
                }
            });
        }

        function toast(msg){
            $("#toastMessage").text(msg).stop(true,true).fadeIn(180).delay(2500).fadeOut(320);
        }
    });
</script>
