<script>
function switchTab(tab) {
  // Toggle content sections
  const mcn = document.getElementById('mcn-section');
  const video = document.getElementById('video-section');

  if (mcn) mcn.style.display = (tab === 'mcn') ? 'block' : 'none';
  if (video) video.style.display = (tab === 'video') ? 'block' : 'none';

  // Toggle active tab classes
  const tabMcn = document.getElementById('tab-mcn');
  const tabVideo = document.getElementById('tab-video');

  if (tabMcn) tabMcn.classList.remove('active');
  if (tabVideo) tabVideo.classList.remove('active');

  const selectedTab = document.getElementById('tab-' + tab);
  if (selectedTab) selectedTab.classList.add('active');
}

// Optional: Auto-switch to "video" tab if returning from submission
document.addEventListener("DOMContentLoaded", function () {
  const url = new URL(window.location.href);
  if (url.searchParams.get("tab") === "video") {
    switchTab("video");
  } else {
    switchTab("mcn"); // Default
  }
});
</script>

