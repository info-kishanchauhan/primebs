<script>
  (function(){
    var overlay  = document.getElementById('awStatementOverlay');
    var csvBtn   = document.getElementById('awGenerateCsvBtn');
    var pdfBtn   = document.getElementById('awDownloadPdfBtn');

    // user ka royalty rate (invoice jaisa)
    var AW_ROYALTY_RATE = <?php echo isset($this->user['royalty_rate_per']) ? (float)$this->user['royalty_rate_per'] : 0; ?>;

    function setText(id, value) {
      var el = document.getElementById(id);
      if (el) el.textContent = value;
    }

    // "12049 INR ‚Äì The Orchard" / "269.32 ‚Ç¨" / "1200 inr"
    function parseAmountParts(amountStr){
      if (!amountStr) return { value:0, currency:'', raw:'' };
      var raw = amountStr.trim();

      // number nikaalo
      var numStr = raw.replace(/[^\d.,-]/g,'').replace(/,/g,'.');
      var value  = parseFloat(numStr) || 0;

      // last me jo bhi text/currency hai (INR, ‚Ç¨, "INR ‚Äì The Orchard", etc.)
      var m = raw.match(/([^\d.,-]+)$/);
      var currency = m ? m[1].trim() : '';

      return { value:value, currency:currency, raw:raw };
    }

    function fmt(val){
      if (!isFinite(val)) return '0.00';
      return val.toFixed(2);
    }

    function openAwModal(rowData){
      // DataTables:
      // 0: id
      // 1: period
      // 2: report type
      // 3: royalty amount (string ex: "269.32 ‚Ç¨" / "12049 INR ‚Äì The Orchard")
      // 4: generation date
      // 5: payment status

      window.__awStatementRowData = rowData;

      var period   = rowData[1] || '';
      var amount   = rowData[3] || '';
      var payStat  = rowData[5] || '';

      // Amount parse for gross/fees
      var parts    = parseAmountParts(amount);
      var netVal   = parts.value;      // ye hi Net Revenue / Payable hoga
      var curr     = parts.currency;   // "‚Ç¨" ya "INR ‚Äì The Orchard" etc.
      var currencySuffix = curr ? (' ' + curr) : '';

      // default: gross = net, fees = 0
      var grossVal = netVal;
      var feesVal  = 0;

      if (AW_ROYALTY_RATE && AW_ROYALTY_RATE > 0) {
        // invoice jaisa formula: Net = Gross * (rate/100)
        grossVal = (netVal * 100) / AW_ROYALTY_RATE;
        feesVal  = grossVal - netVal;        // hamesha positive rakhenge
      }

      var netLabel         = parts.raw ? (parts.raw + '') : '‚Äî'; // original string, INR/EUR jo bhi ho
      var grossPlainLabel  = fmt(grossVal) + currencySuffix;     // sirf number + currency
      var grossBreakLabel  = '+ ' + grossPlainLabel;             // breakdown ke liye + sign
      var feesLabel        = (feesVal > 0 ? '- ' : '') + fmt(Math.abs(feesVal)) + currencySuffix;

      // ============= TOP HEADER ============
      setText('awPeriodLabel', period || '‚Äî');

      // ============= LEFT BLOCK ============

      // Opening Balance = GROSS amount
      setText('awOpeningBalance', grossPlainLabel);

      // Payments line = payment_status
      setText('awPaymentsLabel',  payStat || '‚Äî');

      // Net Revenue = NET amount (table me jo dikh raha hai)
      setText('awNetRevenue',     netLabel);

      // Closing Balance = NET amount (final net)
      setText('awClosingBalance', netLabel);

      // Breakdown: Gross (green, +) & Fees (red, -)
      setText('awGrossAmount',    grossBreakLabel);
      setText('awFeesAmount',     feesLabel);

      // ============= RIGHT BLOCK ============
      // Title: Payment for <Period>
      setText(
        'awPayTitle',
        period ? ('Payment for ' + period) : 'Payment for ‚Äî'
      );

      // Header amount right side: NET
      setText('awPayAmount', netLabel);

      // Calculation Details:
      // Payable Amount = NET
      setText('awCalcPayable', netLabel);
      // WHT = 0 (static HTML me hi hai)
      // Total = NET (Payable + WHT)
      setText('awCalcTotal', netLabel);

      // ============= STATUS HANDLING ============
      var dot   = document.getElementById('awStatusDot');
      var text  = document.getElementById('awStatusText');
      var sub   = document.getElementById('awStatusSubtext');
      var lower = (payStat || '').toLowerCase();

      if (dot && text && sub) {
        dot.classList.remove('aw-status-dot--green');
        text.classList.remove('aw-status-text--green');

        if (lower === 'paid') {
          dot.classList.add('aw-status-dot--green');
          text.classList.add('aw-status-text--green');
          text.textContent = 'Paid';
          sub.textContent  = 'Payment has been paid.';
        } else if (lower === 'unpaid') {
          text.textContent = 'Unpaid';
          sub.textContent  = 'Payment is not yet paid.';
        } else if (lower === 'processing') {
          text.textContent = 'Processing';
          sub.textContent  = 'Statement is being processed.';
        } else {
          text.textContent = payStat || '‚Äî';
          sub.textContent  = '';
        }
      }

      overlay.classList.add('is-open');
    }

    function closeAwModal(){
      overlay.classList.remove('is-open');
    }

    window.openStatementPopup = openAwModal;

    // overlay / close button click -> modal band
    overlay.addEventListener('click', function(e){
      if (e.target === overlay || e.target.hasAttribute('data-aw-close')) {
        closeAwModal();
      }
    });

    // collapse toggles (Net Revenue + optional calc)
    overlay.addEventListener('click', function(e){
      var head = e.target.closest('.aw-collapse-head');
      if (!head) return;
      var root = head.closest('.aw-collapse');
      if (root) root.classList.toggle('is-open');
    });

    // CSV Generate
    // CSV Generate  ‚úÖ direct old usercsvreportAction pe le jao
if (csvBtn) {
  csvBtn.addEventListener('click', function () {
    var rowNode = window.__awStatementRowNode || null;
    if (!rowNode) {
      alert('No statement selected.');
      return;
    }

    // 1) agar icon me row-id hai, wo le lo
    var csvLink = rowNode.querySelector('a.userCsv');
    var id = null;

    if (csvLink && csvLink.getAttribute('row-id')) {
      id = csvLink.getAttribute('row-id');
    } else {
      // 2) warna DataTables rowData se id lo (pehla column)
      var rowData = window.__awStatementRowData || null;
      if (rowData && rowData[0]) {
        id = rowData[0];
      }
    }

    // 3) agar direct CSV file ka href mila hua hai (reportDownload)
    if (!id) {
      var directCsv = rowNode.querySelector('a.reportDownload');
      if (directCsv && directCsv.getAttribute('href')) {
        window.location.href = directCsv.getAttribute('href');
        return;
      }
    }

    // 4) purana PHP action: usercsvreportAction
    if (id) {
      var url = "<?php echo $this->url('financialreport', array('action'=>'usercsvreport'));?>"
                + "?id=" + encodeURIComponent(id);
      window.location.href = url;
      return;
    }

    alert('No CSV available for this statement.');
  });
}

    // PDF Download ‚Äì Invoice
    if (pdfBtn) {
      pdfBtn.addEventListener('click', function(){
        var rowData = window.__awStatementRowData || null;
        if (!rowData) {
          alert('No statement selected.');
          return;
        }

        var id = rowData[0];
        if (!id) {
          alert('Missing statement id.');
          return;
        }

        var url = "<?php echo $this->url('financialreport', array('action'=>'invoice'));?>"
                  + "?id=" + encodeURIComponent(id);

        window.open(url, '_blank');
      });
    }
  })();
