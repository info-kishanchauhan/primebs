<script type="text/javascript">
    $(document).ready(function () {
        acl_PRINT = 0;
        
        $("#frmForm").validate({
            submitHandler: function (form) {
                var required = false;
                $('#frmForm small').text('');
                $('#frmForm').find('input').removeClass('error');

                if ($("#name").val() == '') {
                   required = true;
                   $('#name').addClass('error');
                   $('#name').parent().find("small").text('Store name is required');
                }

                if(strActionMode=="ADD") {
                    var isDuplicate = fn_validate_duplicate($("#name").val(), "tbl_store", "name", "<?php echo $this->url('stores', array('action'=>'validateduplicate'));?>");
                    if (isDuplicate) {
                        required = true;
                        $('#name').addClass('error');
                        $('#name').parent().find("small").text('Store name already exists');
                    }
                }

                if(required) return;

                // Handle file upload
                var formData = new FormData(form);
                formData.append('pAction', strActionMode);
                formData.append('FORM_DATA', JSON.stringify($('#frmForm').serializeObject()));
                
                if (strActionMode == 'EDIT') {
                    formData.append('MASTER_KEY_ID', iActiveID);
                }

                $.ajax({
                    url: "<?php echo $this->url('stores', array('action'=>'save'));?>",
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        try {
                            var objMyPost = JSON.parse(response);
                            if (objMyPost.DBStatus === 'OK') {
                                strActionMode = "ADD";
                                clearForm("frmForm");
                                mySmallAlert('Success', 'Store saved successfully', 1);
                                iActiveID = objMyPost.MY_ID || 0;
                                oTable.fnDraw();
                                $('#imagePreview').html('<div class="no-image-preview"><i class="fa fa-image fa-2x text-muted"></i><div class="text-muted small mt-2">No image selected</div></div>');
                                $('#imageName').text('');
                            } else {
                                mySmallAlert('Error...!', 'There was an error saving the store', 0);
                            }
                        } catch(e) {
                            mySmallAlert('Error...!', 'Invalid response from server', 0);
                        }
                    },
                    error: function() {
                        mySmallAlert('Error...!', 'There was an error saving the store', 0);
                    }
                });
            }
        });
    });

    var pagefunction = function () {
        var responsiveHelper_dt_basic = undefined;
        var breakpointDefinition = { tablet: 1024, phone: 480 };

        oTable = $("#tblMasterList").dataTable({
            "bAutoWidth": false,
            "bLengthChange": false,
            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6 hidden-xs'f><'col-sm-6 col-xs-12 hidden-xs'<'toolbar'>>r>t<'dt-toolbar-footer'<''p>>",
            "bProcessing": true,
            "bServerSide": true,
            "autoWidth" : true,
            "preDrawCallback" : function() {
                if (!responsiveHelper_dt_basic) {
                    responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#tblMasterList'), breakpointDefinition);
                }
            },
            "rowCallback" : function(nRow) {
                responsiveHelper_dt_basic.createExpandIcon(nRow);
            },
            "drawCallback" : function(oSettings) {
                responsiveHelper_dt_basic.respond();
            },
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "id", "value": "" });
            },
            "sAjaxSource": "<?php echo $this->url('stores', array('action'=>'list'));?>",
            "aoColumns": [
                { "bSearchable": false, "bVisible": false },
                { 
                    "bSearchable": false,
                    "bSortable": false,
                    "mRender": function(data, type, full) {
                        return full[1]; // Image from controller
                    }
                },
                { 
                    "bSearchable": true,
                    "bSortable": true
                },
                {
                    "bSearchable": false,
                    "bSortable": false,
                    "mRender" : function (data, type, full) {
                        return '<div style="white-space:nowrap;">' +
                               '<button type="button" class="btn btn-list edit" row-id="'+full[0]+'">' +
                               '<span class="glyphicon glyphicon-pencil"></span> Edit</button>' +
                               
                               '</div>';
                    }
                }
            ],
            "columnDefs": [
                { className: "hidden", "targets": [ 0 ] }
            ]
        });

        $('.dataTables_filter input').attr("placeholder", "Search stores...");

        var strUrl = "<?php echo $this->url('stores', array('action'=>'getrec'));?>";

        oTable.delegate('button.edit', 'click', function (e) {
            e.preventDefault();
            iActiveID = $(this).attr("row-id");
            clearForm("frmForm");
            cPopulateEditEntries(iActiveID, strUrl);
        });

        oTable.delegate('button.delete', 'click', function (e) {
            e.preventDefault();
            iActiveID = $(this).attr("row-id");
            $.SmartMessageBox({
                title  : "Alert!",
                content: "Are you sure you want to delete this store?",
                buttons: '[Yes][No]'
            }, function (ButtonPressed) {
                if (ButtonPressed === "Yes") {
                    var objFormData = {
                        pAction: 'DELETE',
                        KEY_ID : iActiveID
                    };
                    var objMyPost = AJAX_Post("<?php echo $this->url('stores', array('action'=>'delete'));?>", objFormData);
                    if (objMyPost.ERR_NO === 0) {
                        if (objMyPost.DATA.DBStatus === 'OK') {
                            oTable.fnDraw();
                            mySmallAlert('Success', 'Store deleted successfully', 1);
                        } else {
                            mySmallAlert('Error...!', 'There was an error', 0);
                        }
                    }
                }
            });
        });
    };
</script>

