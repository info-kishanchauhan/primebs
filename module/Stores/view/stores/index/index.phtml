// Edit Populate Function
function cPopulateEditEntries(iID,strURL) {
    iActiveID = iID;
    var arrForms=[];
    var objFormData = {
        pAction: 'GETREC',
        KEY_ID : iActiveID
    };
    var objMyPost = AJAX_Post(strURL, objFormData);

    if (objMyPost.ERR_NO === 0 && objMyPost.DATA.DBStatus === 'OK') {
        strActionMode = 'EDIT';
        arrForms=objMyPost.DATA.data[0];
        
        // Populate form fields
        $('#name').val(arrForms.name);
        $('#MASTER_KEY_ID').val(iActiveID);
        
        // Show existing image preview
        if (arrForms.image_preview) {
            $('#imagePreview').html(arrForms.image_preview);
            $('#imageName').text('Current image');
        }
    } else {
        mySmallAlert('Error...!', 'There was an error loading store details', 0);
    }
}

// Clear form function
function clearForm(formId) {
    $('#' + formId).find('input:text, input:password, input:file, textarea').val('');
    $('#' + formId).find('input:radio, input:checkbox').removeAttr('checked').removeAttr('selected');
    strActionMode = "ADD";
    iActiveID = 0;
    $('#MASTER_KEY_ID').val('0');
}
