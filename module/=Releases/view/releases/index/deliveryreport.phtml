<script>
  function copyLink(button) {
    const input = button.previousElementSibling;
    input.select();
    input.setSelectionRange(0, 99999); // mobile support
    document.execCommand("copy");
    button.innerText = "Copied!";
    setTimeout(() => {
      button.innerText = "Copy Link";
    }, 2000);
  }
